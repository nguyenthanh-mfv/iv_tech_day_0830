<p style="color: green"><%= notice %></p>

<% content_for :title, "Departments" %>

<h1>Departments</h1>

<div id="departments">
  <table class="table table-striped">
    <thead>
    <tr>
      <th>ID</th>
      <th>Email</th>
      <th>Actions</th>
    </tr>
    </thead>
    <tbody>
      <% @departments.each do |department| %>
        <%= render department %>

      <% end %>
    </tbody>
  </table>
</div>

<%= link_to "New department", new_department_path %>
