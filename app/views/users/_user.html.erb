<tr id="<%= dom_id user %>">
  <td><%= user.id %></td>
  <td><%= user.email %></td>
  <td>
    <%= link_to "Show", user, class: "btn btn-primary btn-sm" %>
    <%= link_to "Edit", edit_user_path(user), class: "btn btn-secondary btn-sm" %>
    <%= link_to "Delete", user, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
  </td>
</tr>
